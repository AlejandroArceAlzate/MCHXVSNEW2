@import url(http://fonts.googleapis.com/css?family=Roboto+Condensed)
@import "normalize.styl"

parte_roja= #EE1515
parte_negra= #222224
parte_blanca= #F0F0F0

body
	font-family 'Roboto Condensed', sans-serif
	font-size 16px 
.battlefield
	position absolute
.block 
	display block
.inferior
	background parte_blanca
	height 20em
	width 100%
.inline
	display inline-block
.medio
	background parte_negra
	height 1.5em 
	width 100%
	.borde-boton
		background parte_blanca
		border .7em solid parte_negra
		border-radius 50%
		height 1.5em
		margin 0 auto
		position relative 
		width 1.5em
	.boton 
		background parte_blanca
		border 1px solid parte_negra
		border-radius 50%
		height 1em
		top .2em
		left .2em 
		position absolute
		width 1em
		&:hover
			background parte_roja
		
.superior
	background parte_roja
	height 20em
	margin 0 auto
	padding-top 2em
	width 100%

